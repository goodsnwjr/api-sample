{
  "_meta": {
    "sources": [
      "loopback/common/models",
      "loopback/server/models",
      "../common/models",
      "./models"
    ],
    "mixins": [
      "loopback/common/mixins",
      "loopback/server/mixins",
      "../common/mixins",
      "./mixins"
    ]
  },
  "user": {
    "dataSource": "mongoDs",
    "public": true,
    "options": {
      "emailVerificationRequired": false,
      "remoting": {
        "sharedMethods": {
          "*": false,
          "login": true,
          "logout": true,
          "create": true,
          "find": true,
          "profile": true,
          "count": true,
          "deleteById": true,
          "register": true,
          "updateUser": true,
          "deleteUser": true
        }
      }
    }
  },
  "accessToken": {
    "dataSource": "mongoDs",
    "public": false,
    "relations": {
      "user": {
        "type": "belongsTo",
        "model": "user",
        "foreignKey": "userId"
      }
    }
  },
  "ACL": {
    "dataSource": "mongoDs",
    "public": false
  },
  "RoleMapping": {
    "dataSource": "mongoDs",
    "public": false
  },
  "Role": {
    "dataSource": "mongoDs",
    "public": false
  },
  "board": {
    "dataSource": "mongoDs",
    "public": true,
    "relations": {
      "user": {
        "type": "hasMany",
        "model": "contents",
        "foreignKey": "id"
      }
    },
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "create": true,
          "find": true,
          "count": true,
          "deleteById": true
        }
      }
    }
  },
  "contents": {
    "dataSource": "mongoDs",
    "public": true,
    "relations": {
      "user": {
        "type": "hasMany",
        "model": "board",
        "foreignKey": "id"
      }
    },
    "options": {
      "remoting": {
        "sharedMethods": {
          "*": false,
          "create": true,
          "find": true,
          "count": true,
          "deleteById": true,
          "createPost": true
        }
      }
    }
  }
}
